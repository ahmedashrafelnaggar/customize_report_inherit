<odoo>
	
	<!-- Tree View For Service -->
	<record id="tree_service_service_view" model="ir.ui.view">
		<field name="name">Service Service</field>
		<field name="model">service.service</field>
		<field name="arch" type="xml">
			<tree string="Service" editable="bottom">
				<field name="name" required="1"/>
				<field name="is_default" />
			</tree>
		</field>
	</record>

	<record id="tree_room_type_view" model="ir.ui.view">
		<field name="name">Room Type</field>
		<field name="model">room.type</field>
		<field name="arch" type="xml">
			<tree string="Room Type" editable="bottom">
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
	
	<!-- Action For Service -->
	<record id="action_service_service" model="ir.actions.act_window">
		<field name="name">Service</field>
		<field name="res_model">service.service</field>
		<field name="view_mode">tree</field>
	</record>

	<record id="action_room_type" model="ir.actions.act_window">
		<field name="name">Room Type</field>
		<field name="res_model">room.type</field>
		<field name="view_mode">tree</field>
	</record>

	<!-- Menu Item For Service -->
	<menuitem id="service_submenu" name="Service" parent="custom_travels_module.config_submenu" action="action_service_service" sequence="-1"/>

	<menuitem id="room_type_submenu" name="Room Type" parent="custom_travels_module.config_submenu" action="action_room_type" sequence="1"/>
</odoo>