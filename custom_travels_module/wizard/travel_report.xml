<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- form view -->
	<record id="form_travels_report_view" model="ir.ui.view">
		<field name="name">travels.report.form</field>
        <field name="model">travels.report</field>
		<field name="arch" type="xml">
			<form string="Travels Report">
				<group>
					<group>
						<field name="from_date" required="1"/>
						<field name="from_return_date" required="1"/>
						<field name="filter_by" widget="radio"/>
					</group>
					<group>
						<field name="branch_ids" widget="many2many_tags"/>
						<!-- <field name="branch_id"/> -->
						<!-- <field name="to_date" required="1"/> -->
						<!-- <field name="to_return_date" required="1"/> -->
					</group>
				</group>
				<footer>
					<button name="action_print_report" type="object" string="Print" class="oe_highlight" />
					<button special="cancel" type="object" string="Cancel" />
				</footer>
			</form>
		</field>
	</record>
	
	<!-- actions view -->
	<record id="action_travels_report_wizard" model="ir.actions.act_window">
		<field name="name">Customer Name Report</field>
		<field name="res_model">travels.report</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="form_travels_report_view" />
		<field name="target">new</field>
	</record>

</odoo>