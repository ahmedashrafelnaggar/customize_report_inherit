	 <!-- report menu in print button -->
	<record id="traveling_pcr_report_menu" model="ir.actions.report">
		<field name="name">Travels PCR Report</field>
		<field name="model">travels.data</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">custom_travels_module.report_world_agency_pcr</field>
		<field name="report_file">custom_travels_module.report_world_agency_pcr</field>
		<field name="binding_model_id" eval="False"/>
		<field name="binding_type">report</field>
		<field name="paperformat_id" ref="custom_travels_module.paperformat_traveling_report"/>
	</record>

</odoo>