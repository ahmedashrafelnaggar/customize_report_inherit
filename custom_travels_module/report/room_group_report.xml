<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_room_group_template_header">
		<t t-if="not o" t-set="o" t-value="doc"/>
		<t t-if="not company">
			<t t-if="company_id">
				<t t-set="company" t-value="company_id"/>
			</t>
			<t t-elif="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id.sudo()"/>
			</t>
			<t t-else="else">
				<t t-set="company" t-value="res_company"/>
			</t>
		</t>

		<div class="header">
			<div class="row">
				<div class="col-6">
					
				</div>
				<div class="col-6">
					<img t-if="company_id.logo" t-att-src="image_data_uri(company_id.logo)" style="max-height: 65px;" alt="Logo"/>
				</div>
			</div>
		</div>

		<div class="footer" style="font-size: 13px;">
		</div>

		<div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
			 t-att-data-oe-lang="o and 'en_US'">
			 <!-- t-att-data-oe-lang="o and o.env.context.get('lang')"> -->
			<t t-raw="0"/>
		</div>

	</template>
